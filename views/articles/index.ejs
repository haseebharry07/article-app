<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Article Dashboard</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>

<header class="navbar">
    <div class="container nav-container">
        <div class="logo">MyArticles</div>
        <nav>
            <ul class="nav-links">
                <li><a href="/">Home</a></li>
                <li><a href="#">Categories</a></li>
                <li><a href="#">About</a></li>
            </ul>
        </nav>
    </div>
</header>

<main class="container">

    <% if (articles.length > 0) { %>

        <!-- Featured Article (Latest) -->
        <% const latest = articles[0]; %>
        <section class="featured-article">
            <% if (latest.image) { %>
                <img src="/uploads/<%= latest.image %>" alt="<%= latest.title %>" class="featured-image">
            <% } %>
            <div class="featured-content">
                <h1><%= latest.title %></h1>
                <p class="meta"><%= new Date(latest.createdAt).toLocaleString() %></p>
                <p class="excerpt">
                  <%= (latest.description || latest.content || '').substring(0, 200) %>...
                </p>
                <a href="/articles/<%= latest._id %>" class="btn-read">Read More</a>
            </div>
        </section>

        <!-- Google Ad Placeholder -->
        <div class="ad-space">
            <p>Advertisement</p>
        </div>

        <!-- Other Articles -->
        <section class="articles-grid">
            <% articles.slice(1).forEach(article => { %>
                <div class="article-card">
                    <% if (article.image) { %>
                        <img src="/uploads/<%= article.image %>" alt="<%= article.title %>" class="article-image">
                    <% } %>
                    <h3><%= article.title %></h3>
                    <p class="meta"><%= new Date(article.createdAt).toLocaleString() %></p>
                    <p>
                      <%= (article.description || article.content || '').substring(0, 100) %>...
                    </p>
                    <a href="/articles/<%= article._id %>" class="read-link">Read More</a>
                </div>
            <% }) %>
        </section>

    <% } else { %>
        <p>No articles found.</p>
    <% } %>

</main>

<footer class="footer">
    <p>Â© <%= new Date().getFullYear() %> MyArticles. All rights reserved.</p>
</footer>

</body>
</html>